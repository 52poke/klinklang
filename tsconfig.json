{
  "exclude": ["node_modules"],
  "compilerOptions": {
    "target": "esnext",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "esModuleInterop": true,
    "paths": {
      "@mudkipme/*": ["packages/*/src"]
    },
    "baseUrl": "./",
    "strict": true,
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "isolatedModules": true
  } 
}